{% extends "@SonataAdmin/standard_layout.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block s %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    
{% endblock %}
{% block title %} {% trans %}assembler.title{% endtrans %} {% endblock %}

{% block sonata_admin_content %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

<h3 class="card-title text-center">{% trans %}assembler.title{% endtrans %}</h3>
<div class="container">
    <div class="row">
        <div class="col-sm-3">
    {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.source) }}
        </br>
        {{ form_row(form.liturgy_date) }}
        </br>
        {{ form_row(form.text_format) }}
        <div>
            <hr>
            {{ form_row(form.submit) }}
        </div>
    {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}
