{% extends "@SonataAdmin/standard_layout.html.twig" %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    
{% endblock %}

{% block sonata_nav %}
{% endblock sonata_nav %}

{% block logo %}
{% endblock logo %}

{% block sonata_left_side %}
{% endblock sonata_left_side %}

{% block body_attributes %}class="sonata-bc login-page liturgy-login"{% endblock %}

{% block sonata_wrapper %}
    <div class="login-box">
        {% block login_box_header %}
            <div class="login-logo">
                <a href="{{ path('sonata_user_admin_security_login') }}">
                    {% if sonata_admin.adminPool.getOption('title_mode') in ['single_image', 'both'] %}
                        <div>
                            <img style="width:64px;" src="{{ asset(sonata_admin.adminPool.titlelogo) }}" alt="{{ sonata_admin.adminPool.title }}">
                        </div>
                    {% endif %}
                    {% if sonata_admin.adminPool.getOption('title_mode') in ['single_text', 'both'] %}
                        <span>{{ sonata_admin.adminPool.title }}</span>
                    {% endif %}
                </a>
            </div>
        {% endblock %}
        <div class="login-box-body">
            {% block fos_user_content %}

                {% include "@FOSUser/Registration/register_content.html.twig" %}
            {% endblock fos_user_content %}

            <br>
            <hr>
            <a href="{{ path('sonata_user_admin_security_login') }}" class="btn-warning">{{ 'Back to Login Page'|trans({}, 'SonataUserBundle') }}</a>
        </div>

    </div>
    <style>
     body {
         background-image: url("img_tree.png");
         background-repeat: no-repeat;
     }
    </style>
{% endblock sonata_wrapper %}


